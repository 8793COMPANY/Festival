<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_corner2"
    android:layout_marginBottom="20dp">

    <TextView
        android:id="@+id/rFestivalName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="#ac93ff"
        android:textSize="19dp"
        app:layout_constraintVertical_bias="0.071"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/rEtcImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/etc_image"
        app:layout_constraintVertical_bias="0.058"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/rFestivalInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="#ffffff"
        android:textSize="15dp"
        app:layout_constraintVertical_bias="0.02"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintTop_toBottomOf="@+id/rFestivalName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/rFestivalImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:background="@drawable/rounded_corner"
        app:layout_constraintWidth_percent="0.922"
        app:layout_constraintHeight_percent="0.419"
        app:layout_constraintVertical_bias="0.111"
        app:layout_constraintTop_toBottomOf="@+id/rFestivalInfo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/pwChangeButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_rectangle_puple"
        android:fontFamily="@font/pretendard_regular"
        android:text="예약취소"
        android:textColor="#ffffff"
        android:textSize="14dp"
        app:layout_constraintHeight_percent="0.159"
        app:layout_constraintWidth_percent="0.922"
        app:layout_constraintVertical_bias="0.291"
        app:layout_constraintTop_toBottomOf="@+id/rFestivalImage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>