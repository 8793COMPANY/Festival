<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2e2c37"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/loginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/pretendard_bold"
        android:textSize="35sp"
        android:textColor="#ffffff"
        android:text="로그인"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/idText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/idText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:fontFamily="@font/pretendard_medium"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="아이디"
        app:layout_constraintTop_toBottomOf="@+id/loginText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/rectangle1"/>

    <EditText
        android:id="@+id/rectangle1"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/shape_rectangle"
        android:fontFamily="@font/pretendard_medium"
        android:hint="아이디를 입력해주세요"
        android:inputType="textNoSuggestions|textVisiblePassword"
        android:maxLength="20"
        android:paddingLeft="20dp"
        android:textColor="#ffffff"
        android:textColorHint="#626262"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/pwText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idText" />

    <TextView
        android:id="@+id/pwText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/pretendard_medium"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="비밀번호"
        app:layout_constraintTop_toBottomOf="@+id/rectangle1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/rectangle2"/>

    <EditText
        android:id="@+id/rectangle2"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:fontFamily="@font/pretendard_medium"
        android:inputType="textNoSuggestions|textPassword"
        android:maxLength="20"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:hint="비밀번호를 입력해주세요"
        android:textColorHint="#626262"
        android:paddingLeft="20dp"
        android:paddingRight="30dp"
        android:background="@drawable/shape_rectangle"
        android:drawableEnd="@drawable/eye_resize_off"
        app:layout_constraintTop_toBottomOf="@+id/pwText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/errorText" />

    <TextView
        android:id="@+id/errorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="16sp"
        android:textColor="#ff8686"
        app:layout_constraintTop_toBottomOf="@+id/rectangle2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/checkButton" />

    <CheckBox
        android:id="@+id/checkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="fill"
        android:button="@null"
        android:drawableStart="@drawable/custom_checkbox"
        android:drawablePadding="8dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/pretendard_medium"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="자동로그인"
        app:layout_constraintTop_toBottomOf="@+id/errorText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/loginButton" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:fontFamily="@font/pretendard_semi_bold"
        android:gravity="center_horizontal"
        android:letterSpacing="0.05"
        android:paddingTop="3dp"
        android:text="로그인"
        android:textColor="#ffffff"
        android:textSize="26sp"
        android:background="@drawable/custom_button"
        app:layout_constraintBottom_toTopOf="@+id/findText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkButton" />

    <TextView
        android:id="@+id/findText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="80dp"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="아이디/비밀번호 찾기"
        app:layout_constraintTop_toBottomOf="@+id/loginButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/joinText" />

    <TextView
        android:id="@+id/joinText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/pretendard_medium"
        android:textSize="20sp"
        android:textColor="#e8e8e8"
        android:text="아직 회원이 아닌가요? 회원가입"
        android:bufferType="spannable"
        android:drawableEnd="@drawable/arrow_resize_right"
        app:layout_constraintTop_toBottomOf="@+id/findText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>