<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="18dp" />
                    <solid android:color="#2e2c36" />
                    <stroke android:width="1dp"
                        android:color="#8e76ff" />
                </shape>
            </item>

            <item
                android:gravity="center|end"
                android:drawable="@drawable/arrow_down"
                android:color="#8670e5"
                android:width="20dp"
                android:height="20dp"
                android:right="10dp" />
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:startColor="#9b76ff"
                        android:endColor="#5c4cd5"
                        android:angle="270" />
                    <corners android:radius="18dp" />
                </shape>
            </item>

            <item
                android:gravity="center|end"
                android:drawable="@drawable/arrow_down"
                android:width="20dp"
                android:height="20dp"
                android:right="10dp" />
        </layer-list>
    </item>
</selector>